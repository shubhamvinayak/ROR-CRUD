
<%=form_with model: @user, local: true do |f|%>
<p><%=f.label :username%>
<%=f.text_field :username%>
</p>
<p>
<%= f.label :email%>
<%= f.email_field :email%>
</p>
<p>
<%= f.label :password%>
<%= f.password_field :password%>
</p>
<%= f.submit (@user.new_record? ? "sign up" : "update account")%>
<%end%>